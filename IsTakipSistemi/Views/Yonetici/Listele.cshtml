
@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5">
    <div class="mb-3">
        <h3> @ViewBag.personel.personelAdSoyad işleri</h3>
    </div>
    @foreach(var i in ViewBag.isler)
            {
                <div class="card">
                    <div class="card-header bg-black text-center text-white">
                        @i.isBaslik
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"> @i.isAciklama </li>
                            <li class="list-group-item"> iletilen Tarih: @i.iletilenTarih.ToString("dd MMMM yyyy hh:mm") </li>
                            <li class="list-group-item"> Yapılan Tarih : @(i.yapilanTarih != null ? i.yapilanTarih.ToString("dd MMMM yyyy hh:mm") : "Henüz Yapılmadı") </li>
                            <li class="list-group-item"> İş Durumu :  @i.Durumlar.durumAd </li>
                        </ul>
                    </div>

                </div>
                <br />
            }
</div>

